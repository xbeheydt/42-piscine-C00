# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false
max_line_length = 80

[*.{c,h}]
indent_size = 4
indent_style = tab
insert_final_newline = true
cpp_indent_preprocessor = none